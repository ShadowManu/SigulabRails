<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
	<li> <%=link_to 'Home', controller: 'statics'%></li>
	<li> <%=link_to 'Inventario', inventario_url %></li>
	<li> <%=link_to 'Equipos y mobiliarios', equipment_index_path %></li>
	<li class="active"> Ver </li>
</ol>
<p>
  <strong>Nombre:</strong>
  <%= @equipment.name %>
</p>

<p>
  <strong>Marca:</strong>
  <%= @equipment.brand %>
</p>

<p>
  <strong>Modelo:</strong>
  <%= @equipment.model %>
</p>

<p>
  <strong>Serial:</strong>
  <%= @equipment.serial %>
</p>

<p>
  <strong>Número de Bien Nacional:</strong>
  <%= @equipment.national_good %>
</p>

<p>
  <strong>Estatus:</strong>
  <%= @equipment.status %>
</p>

<p>
  <strong>Calibrated:</strong>
  <%= @equipment.calibrated %>
</p>

<p>
  <strong>Última Calibración:</strong>
  <%= @equipment.last_calibration %>
</p>


<p>
  <strong> Medidas: </strong><br>
  <strong> - Alto: </strong>
  <%= @equipment.lenght %><%= @equipment.meassure %><br>
  <strong> - Ancho: </strong>
  <%= @equipment.width %><%= @equipment.meassure %><br>
  <strong> - Profundidad:</strong>
  <%= @equipment.depth %><%= @equipment.meassure %>
</p>

<p>
  <strong>Responsable:</strong>
  <%= @equipment.responsible %>
</p>

<p>
  <strong>Ubicación:</strong>
  <%= @equipment.location %>
</p>

<p>
  <strong>Fecha Adquisición:</strong>
  <%= @equipment.adquisition_date %>
</p>

<p>
  <strong>Orden de Compra:</strong>
  <%= @equipment.buy_order %>
</p>

<p>
  <strong>Costo:</strong>
  <%= @equipment.cost %>
</p>

<p>
  <strong>Factura:</strong>
  <%= @equipment.bill %>
</p>

<p>
  <strong>Uso:</strong>

  <% if @equipment.investigation %>
    <%= ' Investigación ' %>
  <% end %>
  <% if @equipment.teaching %>
    <%= ' Docencia ' %>
  <% end %>
  <% if @equipment.extention %>
    <%= ' Extensión ' %>
  <% end %>
  <% if @equipment.management %>
    <%= ' Gestión ' %>
  <% end %>
</p>
<br><br>
<% if can? :update, @equipment %>
  <i class="fa fa-cog"></i><%= link_to ' Editar', edit_equipment_path(@equipment) %> |
<% end %>
<i class="fa fa-arrow-left"></i><%= link_to ' Atrás', equipment_index_path %>
<br><br><br><br>