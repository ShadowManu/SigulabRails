<div class="row">
	<div class="col-xs-12">
		<ol class="breadcrumb">
			<li><%= link_to 'Inicio', controller: 'statics' %></li>
			<li><%= link_to 'Administración', administration_path %></li>
			<li><%= link_to 'Presupuesto', budget_path %></li>
      <li><%= link_to 'Compromisos', commitments_path %></li>
			<li class="active">Nueva Ejecucion</li>
		</ol>
	</div>
  <% if @execution.errors.any? %>
		<div class="col-xs-12" role="alert">
			<div class="alert alert-danger">
				<ul>
					<% @execution.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>	
			</div>
		</div>
	<% end %>
	<div class="col-xs-12">
		<%= form_for @execution, url: {action: 'create'}, html: { class: 'form-horizontal' } do |i| %>	
			
    <div class="form-group">
				<label for='execution_sae_code' class="col-xs-3 control-label text-right">Código SAE *</label>
				<div class='col-xs-4'>
					<%= i.text_field :sae_code, class: 'form-control' %>
				</div>
			</div>
			
			<div class="form-group">
				<label for='execution_amount' class="col-xs-3 control-label text-right">Monto *</label>
				<div class='col-xs-4'>
					<div class="input-group">
						<%= i.text_field :amount, class: 'form-control' %>
						<span class="input-group-addon">Bs.</span>
					</div>
				</div>
			</div>
			
			<hr />	
			
			<div class="form-group">
				<label for='execution_date' class="col-xs-3 control-label text-right">Fecha *</label>
				<div class='col-xs-4'>
					<%= i.date_field :date, class: 'form-control' %>
				</div>
			</div>
			
			<div class="form-group">
				<div class="col-xs-offset-3 col-xs-9">
					<button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-floppy-saved"></span>&nbsp;&nbsp;Agregar Ejecucion</button>
					<%= link_to executions_path, class: "btn btn-default btn-danger" do %>
						<span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;Cancelar Operación
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-xs-12">
		<div class="well">
			* Los campos son obligatorios.
		</div>
	</div>
</div>