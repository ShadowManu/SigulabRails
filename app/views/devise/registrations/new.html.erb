<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><b><%= 'Usuario' %></b><br />
  <%= f.text_field :username, autofocus: true %></div><br>


  <div><b><%= 'Correo' %></b><br />
  <%= f.email_field :email %></div><br>


  <div><b><%= 'Contraseña' %></b> <% if @validatable %><i>(<%= @minimum_password_length %> caracteres minimo)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off" %></div><br>


  <div><b><%= 'Confirmación Contraseña' %></b><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div><br>


<div class="field">

<b><%='Tipo de usuario:' %></b><br>
   <%= f.check_box :administrator %>
     <%= 'Administrador'%><br>
    <%= f.check_box :technician %>
     <%= 'Tecnico'%><br>
    <%= f.check_box :labBoss %>
     <%= 'Jefe de laboratorio'%><br>
</div>

  <div><%= f.submit "Registrarse!" %></div>
<% end %>
<br>
<%= render "devise/shared/links" %>
