<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= 'Usuario' %><br />
  <%= f.text_field :username, autofocus: true %></div>

  <div><%= 'Correo' %><br />
  <%= f.email_field :email %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= 'Nueva Contraseña' %> <i>(Dejelo en blanco si no quiere cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= 'Confirmacion Contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>


<div>

<%='Tipo de usuario:' %><br>
   <%= f.check_box :administrator %>
     <%= 'Administrador'%><br>
    <%= f.check_box :technician %>
     <%= 'Tecnico'%><br>
    <%= f.check_box :labBoss %>
     <%= 'Jefe de laboratorio'%><br>
</div>


  <div><%= 'Contraseña actual' %> <i>(Necesaria para aplicar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %></div>



  <div><%= f.submit "Editar" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Insatisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>

<%= link_to "Atras", :back %>
