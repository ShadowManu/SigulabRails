<h1>Listing instruments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Measurement unit</th>
      <th>Capacity</th>
      <th>Material</th>
      <th>Use</th>
      <th>Status</th>
      <th>Location</th>
      <th>Last calibration</th>
      <th>Responsible</th>
      <th>National good</th>
      <th>Investigation</th>
      <th>Teaching</th>
      <th>Extention</th>
      <th>Management</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.name %></td>
        <td><%= instrument.brand %></td>
        <td><%= instrument.model %></td>
        <td><%= instrument.measurement_unit %></td>
        <td><%= instrument.capacity %></td>
        <td><%= instrument.material %></td>
        <td><%= instrument.use %></td>
        <td><%= instrument.status %></td>
        <td><%= instrument.location %></td>
        <td><%= instrument.last_calibration %></td>
        <td><%= instrument.responsible %></td>
        <td><%= instrument.national_good %></td>
        <td><%= instrument.investigation %></td>
        <td><%= instrument.teaching %></td>
        <td><%= instrument.extention %></td>
        <td><%= instrument.management %></td>
        <td><%= link_to 'Show', instrument %></td>
        <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

