<h1>Listing consumables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Dimentions</th>
      <th>Material</th>
      <th>Quantity</th>
      <th>Location</th>
      <th>Use</th>
      <th>Responsible</th>
      <th>Investigation</th>
      <th>Teaching</th>
      <th>Extention</th>
      <th>Management</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumables.each do |consumable| %>
      <tr>
        <td><%= consumable.name %></td>
        <td><%= consumable.description %></td>
        <td><%= consumable.dimentions %></td>
        <td><%= consumable.material %></td>
        <td><%= consumable.quantity %></td>
        <td><%= consumable.location %></td>
        <td><%= consumable.use %></td>
        <td><%= consumable.responsible %></td>
        <td><%= consumable.investigation %></td>
        <td><%= consumable.teaching %></td>
        <td><%= consumable.extention %></td>
        <td><%= consumable.management %></td>
        <td><%= link_to 'Show', consumable %></td>
        <td><%= link_to 'Edit', edit_consumable_path(consumable) %></td>
        <td><%= link_to 'Destroy', consumable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

